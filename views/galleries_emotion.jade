html
  head
    title Material Photo Gallery
    link(rel='stylesheet', href='/stylesheets/normalize.css')
    link(rel='stylesheet', href='/stylesheets/material-photo-gallery.css')
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
    .main
      .wrapper
        a(href='/')
          img#logo(src="../images/icons/main_logo.png")
        ul.main_menu
          li
            a#menu_company() COMPANY INTRO
          li
            a#menu_client() CLIENT REFFERENCE
          li
            a#menu_gallery() GALLERIES
          li
            a(href='/#contact_page') CONTACTS US
        ul.sub_menu.company
          li
            a(href='/#about_page') About Us
          li
            a(href='/#workstyle_page') Work Style
        ul.sub_menu.client
          li#sub_menu.workflow
            a(href='/#workflow_page') Work Flow
          li
            a(href='/#making_page') Making
          li
            a(href='/#qna_page') Q&A
        ul.sub_menu.gallery
          li
            a(href='/galleries_movement') Movement
          li
            a(href='/galleries_emotion') Emotion
          li
            a(href='/galleries_color') Color
          li
            a(href='/galleries_extream') Extream
          li
            a(href='/galleries_portrait') Portrait
      .wrapper.bg_empty_8
        .contents.gallery
          img#logo_gallery(src='../images/icons/emotion.png')
          #title
            span#emotion_title GALLERIES
          .m-p-g
            .m-p-g__thumbs(data-google-image-layout='', data-max-height='350')
            .m-p-g__fullscreen
    script(src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js")
    script(src='/javascripts/material-photo-gallery.js')

    script.
      var elem = document.querySelector('.m-p-g');
      document.addEventListener('DOMContentLoaded', function() {
      var gallery = new MaterialPhotoGallery(elem);
      });
      $("#menu_company").click(function(){
        $(".sub_menu.company").show();
        $(".sub_menu.client").hide();
        $(".sub_menu.gallery").hide();
      });
      $("#menu_client").click(function(){
        $(".sub_menu.client").show();
        $(".sub_menu.company").hide();
        $(".sub_menu.gallery").hide();
      });
      $("#menu_gallery").click(function(){
        $(".sub_menu.gallery").show();
        $(".sub_menu.company").hide();
        $(".sub_menu.client").hide();
      });
